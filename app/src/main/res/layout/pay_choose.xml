<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/pay_choose_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/return1" />

        <ImageView
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a5" />

        <TextView
            android:id="@+id/pay_choose_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="立即支付"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/pay_order_code"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:padding="10dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <TextView
            android:text="合计"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#017bd6"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4999.99"
            android:id="@+id/pay_show_money" />

        <TextView
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:id="@+id/textView5" />

    </LinearLayout>

    <TextView
        android:id="@+id/pay_by_alipay"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/a67"
        android:drawableLeft="@drawable/a37"
        android:text="支付宝"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pay_by_china_bank"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/a67"
        android:drawableLeft="@drawable/a37"
        android:text="银联支付"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pay_by_points"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/a67"
        android:drawableLeft="@drawable/a37"
        android:text="积分支付"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>