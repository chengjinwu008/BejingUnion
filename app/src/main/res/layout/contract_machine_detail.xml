<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detail_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/contract_machine_detail_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/return1" />

        <ImageView
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a5" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/content"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_top">

        <LinearLayout
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:orientation="vertical">

            <com.cjq.bejingunion.view.BannerView
                android:id="@+id/contract_machine_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>

            <TextView
                android:textSize="20sp"
                android:textColor="#000"
                android:id="@+id/contract_machine_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="New Text" />
            <FrameLayout
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:background="#fff"
                >

                <TextView android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_const_1"
                    android:text="价格:"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#fe0100"
                    android:textSize="18sp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="199.9"
                    android:id="@+id/contract_machine_detail_const_price"
                    android:textColor="#fe0100"
                    android:textSize="18sp"/>
                <ImageView
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:layout_gravity="end"
                    android:src="@drawable/a11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>
            <FrameLayout
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <com.cjq.bejingunion.view.AllListView
                android:id="@+id/contract_machine_detail_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:background="#fff"
                >

                <TextView android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="库存:"
                    android:id="@+id/detail_const_2"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:id="@+id/contract_machine_detail_const_2_detail"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <ImageView
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:layout_gravity="end"
                    android:src="@drawable/a11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <FrameLayout
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:background="#fff"
                >

                <TextView android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="选择号码:"
                    android:id="@+id/detail_const_3"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawableRight="@drawable/a67"
                    android:hint="--点击选择手机号--"
                    android:id="@+id/contract_machine_detail_const_3_detail"
                    android:textColor="#000"
                    android:textSize="14sp"/>
                <ImageView
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:layout_gravity="end"
                    android:src="@drawable/a11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <FrameLayout
                android:background="#bdbdbd"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
