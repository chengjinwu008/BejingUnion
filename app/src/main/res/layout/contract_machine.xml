<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/contract_machine_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/return1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textSize="16sp"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/title_button_background" />

        <TextView
            android:id="@+id/contract_machine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联通合约机"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.cjq.bejingunion.view.RightSlideMenu
        xmlns:app = "http://schemas.android.com/apk/res/com.cjq.bejingunion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu_content_layout = "@layout/sliding_menu2"
        >

    </com.cjq.bejingunion.view.RightSlideMenu>
</LinearLayout>