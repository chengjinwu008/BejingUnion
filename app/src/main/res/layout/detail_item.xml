<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#fff"
    >

    <TextView android:layout_width="100dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:text="类   型："
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/detail_item_type_name"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型说明"
        android:textColor="#000"
        android:id="@+id/detail_item_chosen_name"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/detail_item_type_name"
        android:layout_toEndOf="@+id/detail_item_type_name" />
    <ImageView
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_gravity="end"
        android:src="@drawable/a67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/detail_item_into" />
</RelativeLayout>