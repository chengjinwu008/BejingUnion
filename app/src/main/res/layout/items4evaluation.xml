<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/a14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:padding="3dp"
            android:id="@+id/evaluation_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="史克威尔官方公布了《最终幻想：零式HD》" />

        <TextView
            android:padding="3dp"
            android:id="@+id/price4one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_item_title"
            android:text="单价：" />

        <TextView
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evaluation_item_title"
            android:layout_toRightOf="@+id/price4one"
            android:text="￥1420"
            android:textColor="#f00" />

        <TextView
            android:padding="3dp"
            android:id="@+id/evaluation_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price4one"
            android:text="已有8888人评价了" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/evaluation_count"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_5dp_corner"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:paddingTop="5dp"

            android:text="去评价"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>