<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/order_list_item_cover"
        android:src="@drawable/a13"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:text="超级蓝宝石吊坠"
            android:id="@+id/order_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="呵呵"
            android:layout_below="@+id/order_list_item_name"
            android:id="@+id/order_list_item_description"
            android:layout_width="match_parent"
            android:layout_above="@+id/order_list_item_count"
            android:layout_height="match_parent" />
        <TextView
            android:text="数量：12"
            android:id="@+id/order_list_item_count"
            android:layout_alignParentBottom="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:text="价格:170"
            android:layout_toRightOf="@+id/order_list_item_count"
            android:id="@+id/order_list_item_price"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>