<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/detail_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/title_bar">

        <ImageView
            android:id="@+id/broadband_detail_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/return1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/broadband_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="5dp"
                android:text="《最终幻想：零式HD》Steam版包含一系列新特性，比如游戏内战斗镜头，完整的Steam成就和交换卡牌，动态模糊特效和自定义动态"
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
                android:padding="10dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="价格：" />
                <TextView
                    android:id="@+id/broadband_detail_price"
                    android:textSize="16sp"
                    android:textColor="#fe0002"
                    android:text="￥700"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="宽带速率：" />
                <TextView
                    android:id="@+id/broadband_detail_v"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="4M"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品详情：" />
                <TextView
                    android:id="@+id/broadband_detail_body"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="4M速度哦！！！！！"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/broadband_detail_evaluations"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="right"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品评价：" />
                <TextView
                    android:id="@+id/broadband_detail_evaluation_count"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textColor="#bdbdbd"
                    android:textSize="14sp"
                    android:text="已有8888人评价"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@drawable/a67"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/broadband_detail_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@color/title_bar"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新开"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/broadband_detail_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/title_bar"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="续费"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

