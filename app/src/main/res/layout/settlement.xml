<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/title_bar"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:id="@+id/settlement_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a5" />

        <TextView
            android:id="@+id/settlement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购物车结算"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/relativeLayout3">
        <LinearLayout
            android:layout_toLeftOf="@+id/settlement_back_icon"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:text="成都…………………………………………………………………………"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="成都…………………………………………………………………………"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/settlement_back_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_width="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <FrameLayout
        android:background="#bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">
        <FrameLayout
            android:background="#bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/textView17"
            android:text="新增收货地址"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/settlement_back_icon2"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/settlement_back_icon2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <FrameLayout
            android:layout_below="@+id/textView17"
            android:background="#bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
    <TextView
        android:textColor="#000"
        android:text="商品清单"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/relativeLayout2"/>
    <FrameLayout
        android:background="#bdbdbd"
        android:id="@+id/framelayout"
        android:layout_below="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <ListView
        android:id="@+id/settlement_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/framelayout"
        android:layout_above="@+id/relativeLayout4" />
    <TextView
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#027bd6"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="提交订单"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textView16" />

    <RelativeLayout
        android:background="#fff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView16"
        android:id="@+id/relativeLayout4">
        <FrameLayout
            android:background="#bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
        android:text="商品总数："
            android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10" />
        <TextView
            android:text="12"
            android:textColor="#f83d38"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:id="@+id/textView11" />
        <TextView
            android:text="件"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11"
            android:id="@+id/textView12" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" />
        <TextView
            android:text="12"
            android:textColor="#f83d38"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_toLeftOf="@+id/textView13"
            android:layout_toStartOf="@+id/textView13" />
        <TextView
            android:text="商品总价:"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:layout_toLeftOf="@+id/textView14"
            android:layout_toStartOf="@+id/textView14" />
    </RelativeLayout>
</RelativeLayout>