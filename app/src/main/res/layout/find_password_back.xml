        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        >

        <EditText
            android:id="@+id/find_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/find_get_verify"
            android:background="@drawable/no_border_white_box"
            android:hint="验证码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="16sp" />
        <TextView
            android:textColor="#fff"
            android:padding="10dp"
            android:background="@color/title_bar"
            android:id="@+id/find_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/find_verify"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/find_verify"
            android:gravity="center"
            android:text="获取验证码" />


